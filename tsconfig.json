{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@environments/*": [
        "./src/environments/*"
      ],
      "@config/*": [
        "./src/app/configs/*"
      ],
      "@components/*": [
        "./src/app/components/*"
      ],
      "@decorators/*": [
        "./src/app/decorators/*"
      ],
      "@directives/*": [
        "./src/app/directives/*"
      ],
      "@interceptors/*": [
        "./src/app/interceptors/*"
      ],
      "@models/*": [
        "./src/app/models/*"
      ],
      "@modules/*": [
        "./src/app/modules/*"
      ],
      "@pipes/*": [
        "./src/app/pipes/*"
      ],
      "@public/*": [
        "./src/app/public/*"
      ],
      "@services/*": [
        "./src/app/services/*"
      ],
      "@utils/*": [
        "./src/app/utils/*"
      ],
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
